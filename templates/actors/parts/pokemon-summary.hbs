<section class="tab summary {{tab.cssClass}}" data-group="primary"
    data-tab="summary">
    <div class="character-card">
        <div class="sidebar-card flexcol">
            <div class="portrait actor-portrait">
                <img class="profile-img" src="{{actor.img}}" data-edit="img"
                    data-action={{ifThen isPlayMode "renderIP" "setImg" }}
                    alt="{{actor.name}}" title="{{actor.name}}" />
                <div class="stat-bar">
                    <div class="toughtness-container stat-container">
                        <i class="stat-icon fa-solid fa-shield"></i>
                        <input class="stat-input" type="number"
                            name="system.stats.toughness.value"
                            value="{{system.stats.toughness.value}}" {{disabled
                            isPlayMode }}>
                    </div>
                    <div class="wounds-container stat-container">
                        <i class="stat-icon fa-solid fa-heart"></i>
                        <div class="wound-input-container">
                            <input class="stat-input" type="number"
                                name="system.stats.wounds.value"
                                value="{{system.stats.wounds.value}}">
                            <span>/</span>
                            <input class="stat-input" type="number"
                                name="system.stats.wounds.max"
                                value="{{system.stats.wounds.max}}" {{disabled
                                isPlayMode }}>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="body-card flexcol">
            <input class="document-name" name="name" type="text"
                value="{{actor.name}}" placeholder="{{localize 'Name'}}"
                data-tooltip="{{actor.name}}" {{disabled isPlayMode }} />
            <div class="types-container">
                {{#if isPlayMode}}
                {{#if types.primaryType}}
                <div class="type-badge"
                    style="--type-color: {{types.primaryType.color}}">
                    <img src="{{types.primaryType.img}}"
                        alt="{{types.primaryType.id}}">
                    <span>{{localize types.primaryType.name}}</span>
                </div>
                {{/if}}
                {{#if types.secondaryType}}
                <div class="type-badge"
                    style="--type-color: {{types.secondaryType.color}}">
                    <img src="{{types.secondaryType.img}}"
                        alt="{{types.secondaryType.id}}">
                    <span>{{localize types.secondaryType.name}}</span>
                </div>
                {{/if}}
                {{else}}
                Types:
                <div class="type-select-container">
                    {{formInput systemFields.stats.fields.types.fields.primary
                    value=system.stats.types.primary
                    localize=true}}
                </div>
                <div class="type-select-container">
                    {{formInput systemFields.stats.fields.types.fields.secondary
                    value=system.stats.types.secondary
                    localize=true}}
                </div>
                {{/if}}
            </div>
        </div>
    </div>

</section>