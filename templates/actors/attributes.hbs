<div class="attribute-div sheet-box">
        <div class="attributes attr-sections">
            <div class="attribute-grid">
                {{#each actor.system.attributes as |attribute attributeKey|}}
                <div class="attr-box flexcol attr-{{attributeKey}}">
                    <label for="attr-{{attributeKey}}" class="attr-label">{{attributeKey}}</label>
                    <button type="button" class="attribute-value" data-action="roll" data-roll="attribute"
                        data-attribute="{{attributeKey}}">
                        <img class="die" src='systems/pokeymanz/assets/dice/d{{attribute.die.sides}}.svg'>
                        <span class="modifier">
                            {{numberFormat attribute.die.modifier sign=true}}
                        </span>
                    </button>
                </div>
                {{/each}}
            </div>
            <div class="config-box">
                <a class="config-button" data-action='openConfigMenu' data-menu="attribute">
                    <i class="fa-solid fa-gear"></i>
                </a>
            </div>
        </div>
        <div class="stats attr-sections">
            <div class="config-box">
                <a class="config-button" data-action='openConfigMenu' data-menu="stat">
                    <i class="fa-solid fa-gear"></i>
                </a>
                </button>
            </div>
            <div class="toughness flexcol">
                <label class="toughness-label" for="actor.system.stat.toughness">{{localize
                    "POKEYMANZ.Stats.Toughness"}}</label>
                <button type="button" class="toughness-value rollable" data-stat="toughness">
                    <i class="fa-solid fa-shield fa-2xl"></i>
                    <span class="value">
                        {{actor.system.stats.toughness.sum}}
                    </span>
                </button>
            </div>
            <div class="types">
                <label for="actor.system.stat.type">{{localize "POKEYMANZ.PokemonType"}}</label>
                <div class="types-icons rollable">
                    <div class="type-box {{actor.system.stats.types.primary}}">
                        <img class="type-img primary-type"
                            src="systems/pokeymanz/assets/icon-type/Pokemon_Type_Icon_{{actor.system.stats.types.primary}}.svg">
                    </div>
                    <div class="type-box {{actor.system.stats.types.secondary}}">
                        <img class="type-img secondary-type"
                            src="systems/pokeymanz/assets/icon-type/Pokemon_Type_Icon_{{actor.system.stats.types.secondary}}.svg">
                    </div>
                </div>
            </div>
        </div>
        <div class="wounds attr-sections flexcol">
            <label>Wounds</label>
            <div class="wounds-box">
                <button class="wounds-button" data-action="modifyWounds" data-operation="wounds-minus"
                    type="button">-</button>
                <div class="wounds-values">
                    <input data-dtype="Number" type="text" class="wounds-input"
                        value="{{actor.system.stats.wounds.value}}" step="1" min="0"
                        max="{{actor.system.stats.wounds.max}}">
                    <span class="max-value">{{actor.system.stats.wounds.max}}</span>
                </div>
                <button class="wounds-button" data-action="modifyWounds" data-operation="wounds-plus"
                    type="button">+</button>
            </div>
        </div>
</div>